  <div class = 'row'>
  <div class = 'col-md-4'>
    <p>
      <strong>Place:</strong>
    </p>

    <p>
      <strong>Date:</strong>
      <%= @observation.date %>
    </p>

    <p>
      <strong>Time:</strong>
      <%= Time.at(@observation.time).strftime("%H:%M") %>
    </p>

    <p>
      <strong>Conditions:</strong>
      <%= @observation.conditions %>
    </p>

    <p>
      <strong>Sunrise:</strong>
      <%= Time.at(@observation.sunrise).strftime("%H:%M") %>
    </p>

    <p>
      <strong>Sunset:</strong>
      <%= Time.at(@observation.sunset).strftime("%H:%M") %>
    </p>

    <p>
      <strong>Species:</strong>
      <%= @observation.species %>
    </p>

    <p>
      <strong>Saw:</strong>
      <%= @observation.saw %>
    </p>

    <p>
      <strong>Heard:</strong>
      <%= @observation.heard %>
    </p>

    <p>
      <strong>Latitude:</strong>
      <%= @observation.latitude %>
    </p>

    <p>
      <strong>Longitude:</strong>
      <%= @observation.longitude %>
    </p>

    <p>
      <strong>Notes:</strong>
      <%= @observation.notes %>
    </p>
    <% if @observation.user == current_user %>
        <%= link_to 'Edit', edit_observation_path(@observation), class: 'card-link' %>
        <%= link_to 'Delete', @observation, method: :delete, class: 'card-link' %>
    <% end %>
  </div>
  <% if @observation.image.present? %>
    <div class = 'col-md-8'>
      <%= image_tag @observation.image, class: 'img-fluid' %>
    </div>
  <% end %>
</div>